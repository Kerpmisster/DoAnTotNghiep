@model IEnumerable<NoiThatHoangGia.Models.AspNetUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Admins.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Số thứ tự</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Quyền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int stt = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@stt</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    @if (item.Roles != null && item.Roles.Any())
                    {
                        @string.Join(", ", item.Roles.Select(role => role.Name))
                    }
                    else
                    {
                        <span>No Role</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>
